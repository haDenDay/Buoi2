 @using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

<div class="container">
    <div class="row justify-content-center">
        <div class="card">
            <div class="card-header">
                <h2>Danh sách tài khoản</h2>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>UserId</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Admin1", new { id = user.Id })" class="btn btn-warning">Sửa</a>
                                    <form method="post" action="@Url.Action("Delete", "Admin1", new { id = user.Id })" style="display:inline;">
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>