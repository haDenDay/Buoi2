@model Buoi2.Models.ViewModels.UpdateUserViewModel
@{
    ViewData["Title"] = "Delete User";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Xóa tài khoản</h2>
                </div>
                <div class="card-body">
                    <p class="text-danger text-center">Bạn có chắc chắn muốn xóa tài khoản này?</p>
                    <div class="form-group">
                        <label>Tên đăng nhập:</label>
                        <input asp-for="UserName" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label>Họ:</label>
                        <input asp-for="FirstName" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label>Tên:</label>
                        <input asp-for="LastName" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label>Ngày sinh:</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                    <form asp-action="Delete" method="post" class="mt-3">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Xóa</button>
                            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
