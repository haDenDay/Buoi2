@model Buoi2.Models.EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<h1 class="text-center">Edit Role</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="EditRole" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Hidden input to store the role ID -->
                <input type="hidden" asp-for="Id" />

                <!-- Input for role name -->
                <div class="form-group">
                    <label asp-for="RoleName" class="form-label">Role Name</label>
                    <input asp-for="RoleName" class="form-control" placeholder="Enter role name" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <!-- Submit button -->
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary w-100">Save Changes</button>
                </div>
            </form>

            <!-- Back to List button -->
            <div class="mt-3 text-center">
                <a asp-action="ListRoles" class="btn btn-link">Back to Roles List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
